{% extends 'form.new.base.html.twig' %}

{% block title %}
    {{ race.event.name }} - Rennen #{{ race.numberInEvent }} - Neue Meldung erstellen
{% endblock %}

{% block body %}
    <h1>Rennen #{{ race.numberInEvent }} - Mannschaft hinzufügen</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-success" value="Hinzufügen" />
    {{ form_end(form) }}


    <hr>
    <p>
        Mannschaft existiert noch nicht?<br><a class="btn btn-primary" href="{{ path('team_new', { 'race': race.id }) }}">Neue Mannschaft erstellen</a>
    </p>

    <hr />
    <a href="{{ path('race_show', { 'race': race.id, 'event': race.event.id }) }}" class="btn btn-default">Zurück zum Rennen</a>
{% endblock %}
